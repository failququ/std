{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
    },
    "strict": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "./cypress.config.ts",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
}